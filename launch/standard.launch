<?xml version="1.0"?>
<launch>
  <arg name="use_rviz" default="true" />

  <!-- launch rviz with config/access_teleop_config.rviz -->
  <node pkg="rviz" type="rviz" name="rviz"
      args="-d $(find access_teleop)/config/access_teleop_config.rviz"
      if="$(arg use_rviz)" />

  <node pkg="access_teleop" name="gripper_teleop" type="access_gripper_teleop.py" />

  <group ns="camera1">
  <node pkg="tf" type="static_transform_publisher" name="camera_broadcaster"
      args="0.0 0.0 2.5 0 0 3.14159 odom camera1 10" />
  </group>

  <group ns="camera2">
  <node pkg="tf" type="static_transform_publisher" name="camera_broadcaster"
      args="0.0 -1.5 0 0 0 -1.57 odom camera2 10" />
  </group>

</launch>
